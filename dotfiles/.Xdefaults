! -- Fonts -- !
urxvt.font: -*-terminus ttf -medium-*-17-*-*-*-*-*-*-*
urxvt.boldFont: -*-terminus ttf -bold-*-17-*-*-*-*-*-*-*
!urxvt*font:     -xos4-terminus-medium-*-*-*-12-*-*-*-*-*-iso8859-2
!urxvt*boldFont: -xos4-terminus-bold-*-*-*-12-*-*-*-*-*-iso8859-2

!URxvt.font: -*-terminus-*-*-*-*-14-*-*-*-*-*-*-u
!URxvt.font: -*-droid sans mono-*-*-*-*-14-*-*-*-*-*-*-u
!URxvt.font:               xft:terminus:pixelsize=16:antialias=false
!URxvt.font: 12x24
!URxvt.font: -misc-fixed-medium-r-normal--29-140-75-75-c-90-iso8859-1

! extensions
URxvt.perl-ext-common: default,font-size,clipboard,keyboard-select,url-select
! clipboard
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.clipboard.copycmd:  xsel -ib
URxvt.clipboard.pastecmd: xsel -ob
! keyboard-select
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
! url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.autocopy: true
URxvt.url-select.button: 1
URxvt.url-select.launcher: /usr/bin/google-chrome
URxvt.url-select.underline: true

!font size
URxvt.keysym.C-Up:     perl:font-size:increase
URxvt.keysym.C-Down:   perl:font-size:decrease
URxvt.keysym.C-S-Up:   perl:font-size:incglobal
URxvt.keysym.C-S-Down: perl:font-size:decglobal

! General
urxvt*termName:           rxvt-unicode-256color
urxvt*loginShell:         true
urxvt*scrollBar:         false
urxvt*secondaryScroll:    true
urxvt*saveLines:         65535
urxvt*cursorBlink:       false
!urxvt*cursorUnderline:   true
urxvt*urgentOnBell:       true
!urxvt*override-redirect:false
!urxvt*borderLess:       false
!urxvt*internalBorder:       0
!urxvt*externalBorder:       0
